{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["package.json", "package-lock.json", "node_modules/**"]
      }
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/recommendations",
      "dest": "api/recommendations.js"
    },
    {
      "src": "/api/flight-search",
      "dest": "api/flight-search.js"
    },
    {
      "src": "/api/image-search",
      "dest": "api/image-search.js"
    },
    {
      "src": "/destinos",
      "dest": "/public/destinos.html"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/public/assets/$1"
    },
    {
      "src": "/(.*)\\.html",
      "dest": "/public/$1.html"
    },
    {
      "src": "/$",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
