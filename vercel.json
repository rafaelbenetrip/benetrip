{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/recommendations",
      "dest": "api/recommendations.js"
    },
    {
      "src": "/api/flight-search",
      "dest": "api/flight-search.js"
    },
    {
      "src": "/api/image-search",
      "dest": "api/image-search.js"
    },
    {
      "src": "/destinos",
      "dest": "/public/destinos.html"
    },
    {
      "src": "/destinos/(.*)",
      "dest": "/public/destinos.html"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/public/assets/$1"
    },
    {
      "src": "/(confirmation|destinos|flights|teste-api)\\.html",
      "dest": "/public/$1.html"
    },
    {
      "src": "/favicon.ico",
      "dest": "/public/assets/images/favicon.ico"
    },
    {
      "src": "/$",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "headers": [
    {
      "source": "/destinos.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
